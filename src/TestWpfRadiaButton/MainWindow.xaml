<Window
    x:Class="TestWpfRadiaButton.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestWpfRadiaButton"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="263"
    Height="358"
    mc:Ignorable="d">
    <Window.Resources>
        <local:TestWpfRadiaBtnViewModel x:Key="viewModel" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="1" Header="Radio Buttons">
            <StackPanel VerticalAlignment="Center">
                <RadioButton Margin="0,5,0,5" Content="Choice1" />
                <RadioButton Margin="0,5,0,5" Content="Choice2" />
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
